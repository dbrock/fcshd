#!/usr/bin/env ruby

begin
  require "fcshd"
rescue LoadError
  require "pathname"
  $: << File.expand_path("../../lib", Pathname.new(__FILE__).realpath)
  require "fcshd"
end

logger = FCSHD::Logger.new(STDERR)
compiler = FCSHD::Compiler.new(logger)
compiler.start! 

Thread.abort_on_exception = true

begin
  FCSHD::Server.new(34345, compiler, logger).run!
rescue Interrupt
  logger.log "Exiting."
end
