#!/usr/bin/env ruby

begin
  require "fcshd"
rescue LoadError
  require "pathname"
  $: << File.expand_path("../../lib", Pathname.new(__FILE__).realpath)
  require "fcshd"
end

if ARGV == ["-v"] || ARGV == ["--version"]
  puts "fcshd #{FCSHD::VERSION}"
  exit
end

logger = FCSHD::Logger.new(STDOUT)

logger.die <<EOF if not FCSHD::FlexHome.known?
Please put the Flex SDK in #{FlexHome.default} or set $FLEX_HOME.
EOF

logger.log "this is fcshd #{FCSHD::VERSION}"

compiler = FCSHD::Compiler.new(logger)
compiler.start! 

Thread.abort_on_exception = true

begin
  FCSHD::Server.new(FCSHD::Server::PORT, compiler, logger).run!
  logger.log "Now listening to port #{FCSHD_PORT}."
rescue Interrupt
  logger.log ""
  logger.log "Exiting."
rescue Exception => error
  logger.error "Could not listen to port #{FCSHD_PORT}: #{error}"
end
